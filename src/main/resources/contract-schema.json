{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "JSON representation of a simple contract",
  "type": "object",
  "properties": {
    "id": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "targets": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/target"
      }
    }
  },
  "additionalProperties": false,
  "required": [
    "name"
  ],
  "definitions": {
    "target": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "countries": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/country"
          }
        },
        "splitStrategy": {
          "$ref": "#/definitions/splitStrategy"
        }
      },
      "required": [
        "name"
      ],
      "additionalProperties": false
    },
    "country": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "code": {
          "type": "string"
        },
        "currency": {
          "type": "string"
        }
      },
      "required": [
        "name",
        "code",
        "currency"
      ],
      "additionalProperties": false
    },
    "splitStrategy": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string"
        },
        "useCountryCurrency": {
          "type": "boolean"
        }
      },
      "required": [
        "type"
      ],
      "additionalProperties": false
    }
  }
}